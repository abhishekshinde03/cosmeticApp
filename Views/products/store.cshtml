@model IEnumerable<cosmeticApp.Models.product>

@{
    ViewData["Title"] = "store";
}
@{Layout = "~/Views/Shared/_Layout1.cshtml";}

<h1>Store</h1>
<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">
                        @item.productName
                    </div>
                    <div class="card-body">
                        <img src="~/images/@item.productfile" height="150" /> <br />
                        price:@item.price
                    </div>
                    <div class="card-footer">
                        <a asp-controller="orders" asp-action="Create" asp-route-id="@item.productId">Buy</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
